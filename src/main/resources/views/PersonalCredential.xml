<?xml version="1.0" encoding="UTF-8"?>
<object-views xmlns="http://apps.axelor.com/xml/ns/object-views"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://apps.axelor.com/xml/ns/object-views http://apps.axelor.com/xml/ns/object-views/object-views_0.7.xsd">

	<grid name="personal-credential-grid" title="Personal Credential Grid"
		model="com.axelor.sn.db.PersonalCredential">

		<field name="snType"></field>
		<field name="snUserName"></field>
<!-- 		<field name="snUsername" domain="self.snType =: snType"></field> -->
		<!-- <field name="password" hidden="true"></field> -->

		<field name="userToken" hidden="true"></field>
		<!-- <field name="userId"></field> -->
	</grid>

	<form name="personal-credential-form"
		onNew="action-user-personal,com.axelor.sn.web.FBController:saySNType,action-refresh-but-stat" onLoad="action-refresh-but-stat"
		cols="2" colWidths="*,200" title="Personal Credential Form" model="com.axelor.sn.db.PersonalCredential">

		<toolbar>
			<button name="save" title="Save" hidden="true" />
		</toolbar>
		<group title="Personal Credentials" name="credentials" cols="4"
			colSpan="1">
			<field name="snType" readonly="true"></field>
			<field name="userId" readonly="true" hidden="true"></field>
			<break />
			<button name="getToken" title="Authorization" onClick="com.axelor.sn.web.FBController:getAuthUrlFB"/>
<!-- 			<field name="snUsername" -->
<!-- 				help="Your Username from which you are Login into Facebook"></field> -->
<!-- 			<field name="password" widget="password" -->
<!-- 				help="Your Password from which you are Login into Facebook!! Password Will Not be Stored" -->
<!-- 				onChange="com.axelor.sn.web.FBController:getAuthentication"></field> -->
			<break />
			<field name="userToken" readonly="true" hidden="true"></field>
			<field name="knowStat" hidden="true" readonly="true"></field>
			<break />
			<button name="btnRefreshToken" title="Refresh UserToken"
				onClick="com.axelor.sn.web.FBController:getRefresh" />
		</group>
		<break />
		<field name="knowStat" hidden="true"></field>
	</form>

	<action-attrs name="action-refresh-but-stat">
		<attribute name="hidden" for="btnRefreshToken"
			expr="eval:knowStat!=true" />
	</action-attrs>


	<action-record name="action-user-personal" model="com.axelor.sn.db.PersonalCredential">
		<field name="userId" expr="eval:__user__" />
	</action-record>
</object-views>

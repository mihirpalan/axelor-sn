<?xml version="1.0" encoding="UTF-8"?>
<object-views xmlns="http://apps.axelor.com/xml/ns/object-views"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://apps.axelor.com/xml/ns/object-views http://apps.axelor.com/xml/ns/object-views/object-views_0.7.xsd">

	<selection name="select-functionality">
		<!-- <option value="post">Post</option> -->
		<option value="retrive">Retrive</option>
<!-- 		<option value="inbox">Inbox</option> -->
	</selection>

	<grid title="Parameter Configration" name="param-config-grid">
	
		<field name="snType"></field>
		<field name="paramFor"></field>
		<field name="paramLimit"></field>
		<field name="paramSince"></field>
		<field name="paramUntil"></field>
		<field name="curUser" hidden="true"></field>
	</grid>

	<form title="Parameter Configration" name="param-config-form" onLoad="action-tell-user,com.axelor.sn.web.FBController:saySNType" onNew="action-tell-user,com.axelor.sn.web.FBController:saySNType"
		onSave="com.axelor.sn.web.ParameterConfigController:getConfigDetail">
	<group canCollapse="true" title="Help" colSpan="3">
	<label colSpan="3" title="This Parameter Can only set at once although it can be Editable as well as it will used to Retrive Data From Facebook for NEWS FEEDs and FRIEND REQUEST Only"/>
	</group>
	<break/>
		<field name="snType" readonly="true"></field>
		<break />
		<field name="paramFor" canSelect="true" selection="select-functionality"></field>
		<break />
		<field name="paramLimit"></field>
		<break />
		<field name="paramSince"></field>
		<break />
		<field name="paramUntil"></field>
		<break />
		<field name="curUser" readonly="true"></field>
	</form>

	<action-record name="action-tell-user" model="com.axelor.sn.db.ConfigParameter">
		<field name="curUser" expr="eval:__user__" />
	</action-record>
</object-views>
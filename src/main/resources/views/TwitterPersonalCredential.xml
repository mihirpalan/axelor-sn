<?xml version="1.0" encoding="UTF-8"?>
<object-views xmlns="http://apps.axelor.com/xml/ns/object-views"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://apps.axelor.com/xml/ns/object-views http://apps.axelor.com/xml/ns/object-views/object-views_0.7.xsd">

	<grid name="twitter-credential-grid" title="Twitter Personal Credential Grid"
		model="com.axelor.sn.db.PersonalCredential">
		<toolbar>
			<button name="save" title="Save" hidden="true" />
			<button name="edit" title="Edit" hidden="true" />
		</toolbar>
		<!-- <field name="snUsername"></field> -->
		<!-- <field name="password" hidden="true"></field> -->

		<field name="snType"></field>
		<field name="snUserName"></field>
		<field name="userToken"></field>
		<!-- <field name="userId" hidden="true"></field> -->
	</grid>

	<form name="twitter-credential-form" cols="2" colWidths="*,200"
		onNew="action-user-twitter,com.axelor.sn.web.TWTController:saySNType"
		title="Twitter Personal Credential Form" model="com.axelor.sn.db.PersonalCredential">

		<toolbar>
			<button name="save" title="Save" hidden="true" />
			<button name="edit" title="Edit" hidden="true" />
		</toolbar>
		<group title="Twitter's Personal Credentials"  cols="4"	colSpan="1">
			<field name="snType" readonly="true"></field>
			<break />
			
			<field name="snUsername" title="Username" required="true"></field>
			<field name="snPassword" required="true" widget="password"
				title="Password"></field>
			<break />
<!-- 			<button name="getUrl" title="Allow Access" onClick="com.axelor.sn.web.TWTController:obtainToken" /> -->
<!-- 			<field name="pinTwt" title="Pin" required="true"></field> -->
<!-- 			<button name="getToken" title="Authorize" onClick="com.axelor.sn.web.TWTController:enterPin" /> -->
			<button name="getToken" title="Authorize" onClick="com.axelor.sn.web.TWTController:getAuthentication" />
			<break />
			<field name="userToken" readonly="true" hidden="true"></field>
			<field name="userTokenSecret" hidden="true"></field>
			<break />
			<field name="userId" readonly="true" hidden="true"></field>
		</group>
		<group name="side_help" title="Help" colSpan="1" cols="1"
			canCollapse="true"
			help="Specify The Application's API key and API key Secret for Particualr Social networking Website Application">
			<label
				title="Specify the Type along with Personal Credentials Username and Password and it will do the work no need to CLICK any where and Click on Save when you get an Acknowledgment" />
		</group>
	</form>

	<action-record name="action-user-twitter" model="com.axelor.sn.db.PersonalCredential">
		<field name="userId" expr="eval:__user__" />
	</action-record>
</object-views>

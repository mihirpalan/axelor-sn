<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<object-views xmlns="http://apps.axelor.com/xml/ns/object-views" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://apps.axelor.com/xml/ns/object-views http://apps.axelor.com/xml/ns/object-views/object-views_0.7.xsd">
    <grid name="group-discussion-grid" title="Discussions" orderBy="discussionTime">
			<toolbar>
				<button name="delete" title="" hidden="true"/>
				<button name="dlete" title="Delete" onClick="deletePost"/>
			</toolbar>
			<field name="discussionTitle" title="Title"/>
			<field name="discussionSummary" title="Summary"/>
<!-- 			<field name="postBy" title="By"/> -->
			<field name="discussionTime" title="Time"/>
			<field name="groupName"/>
			<field name="discussionComments" title="Comments"/>
    </grid>
	<form cols="4" colWidths="15%,*,25%" onLoad="action-post-discussion-view,hideCommentfield" onSave="postDiscussion,save,action-post-discussion-view" onNew="action-post-discussion-view,action-user3" name="group-discussion-form" title="Discussion">
	    <group colSpan="4" cols="4" colWidths="15%,30%,30%,25%">
		    <field name="curUser" hidden="true" readonly="true"/>
		    <break/>
		    <field name="discussionId" title="ID" readonly="true"/>
		    <break/>
		    <field name="groupName" title="Group" colSpan="3" widget="SuggestBox" domain="self.curUser = :curUser" required="true"/>
		    <break/>
		    <field name="discussionTitle" title="Title" colSpan="3" required="true"/>
		    <break/>
		    <field name="discussionSummary" title="Summary" colSpan="3" required="true"/>
		    <break/>
		    <field name="discussionBy" title="By" hidden="true" colSpan="3" readonly="true"/>
		    <break/>
		    <field name="discussionTime" title="Time" colSpan="3" readonly="true"/>
		    <field name="discussionByCurrentUser" title="User" hidden="true"/>
	    </group>
	    <break/>
	    <group colSpan="1" cols="3" colWidths="15%">
	        <button name="getDiscussionComments" title="Get Comments" onClick="getDiscussionComments,refresh-discussion-comments" colSpan="1"/>
	        <button name="addDiscussionComment" title="Add Comment" onClick="unhideCommentfield" colSpan="1"/>
	        <spacer colSpan="1"/>
	    </group>
	    <break/>
	    <group name="commentgroup" title="Comment" hidden="true" colSpan="4" cols="4">
	        <field name="comment" title="Comment" colSpan="3"/>
	        <group colSpan="1" cols="2">
	            <button name="addPostComment" title="Add" onClick="addComment,hideCommentfield,refresh-discussion-comments"/>
	            <button name="cancel" title="Cancel" onClick="action-comment-clear,hideCommentfield"/>
	        </group>
	    </group>
	    <break/>
	    <notebook name="notebookComments" title="Comments" colSpan="4">
	        <page title="Comments">
	            <field name="discussionComments" readonly="true">
	                <grid orderBy="-commentTime" title="Comments">
	                    <field name="comment" title="Comment"/>
	                    <field name="commentTime" title="Time"/>
	                    <field name="byUser" title="By"/>
	                </grid>
	            </field>
	        </page>
	    </notebook>
	</form>

    <action-attrs name="action-post-discussion-view">
    	<attribute name="readonly" for="discussionTitle" expr="eval: id!=null"/>
    	<attribute name="readonly" for="discussionSummary" expr="eval: id!=null"/>
    	<attribute name="readonly" for="groupName" expr="eval: id!=null"/>
    	<attribute name="hidden" for="discussionTime" expr="eval: id==null"/>
    	<attribute name="hidden" for="notebookComments" expr="eval: id==null"/>
    	<attribute name="hidden" for="getDiscussionComments" expr="eval: id==null"/>
    	<attribute name="hidden" for="addDiscussionComment" expr="eval: id==null"/>
    </action-attrs>
   
    <action-attrs name="hideCommentfield">
<!--     	<attribute name="hidden" for="addPostComment" expr="true"/> -->
    	<attribute name="hidden" for="addDiscussionComment" expr="false"/>
<!--     	<attribute name="hidden" for="comment" expr="true"/> -->
    	<attribute name="hidden" for="commentgroup" expr="true"/>
    </action-attrs>
    <action-attrs name="unhideCommentfield">
<!--     	<attribute name="hidden" for="addPostComment" expr="false"/> -->
    	<attribute name="hidden" for="addDiscussionComment" expr="true"/>
<!--     	<attribute name="hidden" for="comment" expr="false"/> -->
    	<attribute name="hidden" for="commentgroup" expr="false"/>
    </action-attrs>
<!--     <action-record model="com.axelor.sn.db.GroupDiscussion" name="current-user-post"> -->
<!--     	<field expr="eval: id==null" name="discussionByCurrentUser"/> -->
<!--     	<field expr="eval:__user__" name="curUser"/> -->
<!-- 	</action-record> -->
    <action-method name="getDiscussionComments">
    	<call class="com.axelor.sn.web.Controller" method="getDiscussionComments"/>
    </action-method>
	<action-method name="refresh-discussion-comments">
		<call class="com.axelor.sn.web.Controller" method="refreshDiscussionComments"/>
    </action-method>
	<action-method name="addComment">
    	<call class="com.axelor.sn.web.Controller" method="addDiscussionComment"/>
    </action-method>
    <action-method name="postDiscussion">
    	<call class="com.axelor.sn.web.Controller" method="postDiscussion"/>
    </action-method>

    <action-method name="deletePost">
    	<call class="com.axelor.sn.web.Controller" method="deleteDiscussion"/>
    </action-method>


</object-views>

<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<object-views xmlns="http://apps.axelor.com/xml/ns/object-views"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://apps.axelor.com/xml/ns/object-views http://apps.axelor.com/xml/ns/object-views/object-views_0.7.xsd">
	<grid name="personal-credentials-grid" title="Personal Credentials"
		model="com.axelor.sn.db.PersonalCredential">
		<toolbar>
			<button name="delete" title="" hidden="true" />
			<button name="remove" title="UnAuthorize" onClick="action-unauthorize" prompt="Are you sure...?"/> 
		</toolbar>
		<field name="userToken" title="User Token" />
		<field name="snUserName" title="User Name"/>
		<field name="snType" title="Network Type" />
	</grid>
	<form name="personal-credentials-form" title="Personal Credential"
		cols="4" model="com.axelor.sn.db.PersonalCredential" onNew="action-network"
		colWidths="10%,20%,35%,35%">
		<toolbar>
			<button name="save" title="" hidden="true" />
		</toolbar>
		<field name="snType" title="Network Type" readonly="true"
			hidden="true">
			<grid title="Social Networks">
				<field name="name" title="Name" />
				<field name="website" title="Website" />
			</grid>
			<form title="Social Network Type">
				<field name="name" title="Name" />
				<field name="website" title="Website" />
			</form>
		</field>
		<break />
		<button name="getUrl" title="Authorize" onClick="action-get-url"
			colSpan="1" />
	</form>

	<action-method name="action-get-url">
		<call class="com.axelor.sn.web.Controller" method="getUrl" />
	</action-method>
	
	<action-method name="action-unauthorize">
		<call class="com.axelor.sn.web.Controller" method="unAuthorizeApp" />
	</action-method>

	<action-method name="action-network">
		<call class="com.axelor.sn.web.Controller" method="networkType" />
	</action-method>

</object-views>
<?xml version="1.0" encoding="UTF-8"?>
<object-views xmlns="http://apps.axelor.com/xml/ns/object-views"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://apps.axelor.com/xml/ns/object-views http://apps.axelor.com/xml/ns/object-views/object-views_0.7.xsd">
	<grid title="Application Credential" name="application-credential-grid">
		<field name="snType"></field>
		<field name="apikey"></field>
		<field name="apisecret"></field>
		<field name="userId"></field>
		

	</grid>

	<form title="Application Credential" name="application-credential-form"
		cols="2" colWidths="*,200" onNew="action-user">
		<group title="Application Credential" colSpan="1" cols="4">
			<field name="snType" required="true"></field>
			<field name="userId" required="true" readonly="true"></field>
			<break />
			<field name="redirectUrl"></field>
			<break/>
			<field name="apikey"></field>
			<field name="apisecret"></field>
		</group>
		<group name="side_help" title="Help" colSpan="1" cols="1"
			canCollapse="true"
			help="Specify The Application's API key and API key Secret for Particualr Social networking Website Application">
			<label
				title="Specify The Application's API key and API key Secret for Particualr Social networking Website Application" />
		</group>
	</form>

	<action-record name="action-user"
		model="com.axelor.sn.db.ApplicationCredentials">
		<field name="userId" expr="eval:__user__" />
	</action-record>

	<!-- <action-condition name="action-check-user"> -->
	<!-- <check if="__user__ &#61;&#61; Administrator" field="userId" /> -->

	<!-- </action-condition> -->


</object-views>